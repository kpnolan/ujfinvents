<%- model_class = Field -%>
<div class="page-header">
  <h1><%=t '.title', :default => Field %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @field.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:num_rows) %></dt>
      <dd><pre class="prettyprint"><%= @field.num_rows %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:num_columns) %></dt>
      <dd><pre class="prettyprint"><%= @field.num_columns %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              fields_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_field_path(@field), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              field_path(@field),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

