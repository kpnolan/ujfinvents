<%- model_class = Plant -%>
<div class="page-header">
  <h1><%=t '.title', :default => Plant %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:incept_date) %></dt>
      <dd><pre class="prettyprint"><%= @plant.incept_date %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:flower_date) %></dt>
      <dd><pre class="prettyprint"><%= @plant.flower_date %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:harvest_date) %></dt>
      <dd><pre class="prettyprint"><%= @plant.harvest_date %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              plants_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_plant_path(@plant), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              plant_path(@plant),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

