<%- model_class = Measurement -%>
<div class="page-header">
  <h1><%=t '.title', :default => Measurement %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:label) %></dt>
      <dd><pre class="prettyprint"><%= @measurement.label %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:ts_taken) %></dt>
      <dd><pre class="prettyprint"><%= @measurement.ts_taken %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:device) %></dt>
      <dd><pre class="prettyprint"><%= @measurement.device %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              measurements_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_measurement_path(@measurement), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              measurement_path(@measurement),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

