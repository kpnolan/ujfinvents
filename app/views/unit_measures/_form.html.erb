<%= simple_form_for(@unit_measure) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nominal_reference %>
    <%= f.association :unit_measure %>
    <%= f.association :conversion %>
    <%= f.association :metric %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
